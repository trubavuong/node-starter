{
  "name": "@trubavuong/node-starter",
  "version": "0.0.0",
  "description": "NodeJS application boilerplate",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint --max-warnings 0 *.js lib/**/*.js __tests__/**/*.js",
    "lint:fix": "eslint --max-warnings 0 --fix *.js lib/**/*.js __tests__/**/*.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "npm run test -- --watch",
    "test:cover": "npm run test -- --no-cache --coverage",
    "prepare": "husky install",
    "prepublishOnly": "npm run qc",
    "qc": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trubavuong/node-starter.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "boilerplate"
  ],
  "author": "Vuong Tru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trubavuong/node-starter/issues"
  },
  "homepage": "https://github.com/trubavuong/node-starter#readme",
  "devDependencies": {
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.2",
    "jest": "^26.6.3",
    "husky": "^6.0.0"
  }
}
